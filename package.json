{
  "name": "e2e-testing-with-jest",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "version": "1.0.0",
  "description": "use selenium with jest",
  "main": "index.js",
  "scripts": {
    "test_ui": "JEST_SUITE_NAME=\"End 2 End UI Testing\" JEST_JUNIT_OUTPUT=\"./report/junit_ui.xml\" jest tests/e2e_ui --verbose --detectOpenHandles",
    "test_api": "JEST_SUITE_NAME=\"End 2 End API Testing\" JEST_JUNIT_OUTPUT=\"./report/junit_api.xml\" jest tests/e2e_api --verbose --detectOpenHandles"
  },
  "author": "Hung Tran",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.7",
    "@types/selenium-webdriver": "^3.0.12",
    "axios": "^0.18.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "chromedriver": "^2.42.0",
    "geckodriver": "^1.12.2",
    "jest": "^23.6.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.2"
  },
  "devDependencies": {
    "faker": "^4.1.0",
    "jest-junit": "^5.2.0"
  }
}
